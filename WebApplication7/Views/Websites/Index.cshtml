@model IEnumerable<WebApplication7.Models.Website>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @using (Html.BeginForm("Index", "Websites", FormMethod.Get))
    {
        @Html.TextBox("Search");<input type="submit" value="search" />
    }
</p>
<p>
    @if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Add Your Site", "Create")
    }
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SiteName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topic)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SiteName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Topic)
        </td>
        <td>
            @if (User.Identity.IsAuthenticated) { @Html.ActionLink("Edit", "Edit", new { id = item.ID })} |
            @if (User.Identity.IsAuthenticated) { @Html.ActionLink("Delete", "Delete", new { id = item.ID })} |
            @Html.ActionLink("Details", "Details", new { id=item.ID })   
        </td>
    </tr>
}

</table>
